# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# LLM Configuration
MAIN_MODEL=openai:gpt-4o
SUB_MODEL=openai:gpt-4o-mini
TEMPERATURE=0.1

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/fraud_detection
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/fraud_detection

# Vector Database (pgvector)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Application
APP_NAME="Fraud Detection RLM System"
APP_VERSION=0.1.0
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8501"]

# Performance
MAX_TRANSACTIONS_NAIVE=50
MAX_TRANSACTIONS_RAG=100
MAX_TRANSACTIONS_RLM=10000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Kaggle Dataset
KAGGLE_DATASET_PATH=./data/creditcard.csv
DATASET_URL=https://www.kaggle.com/datasets/mlg-ulb/creditcardfraud
